<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfigActivity">


    <EditText
        android:id="@+id/editTextBroker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_marginTop="50dp"
        android:hint="Adresse Broker"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/editTextPort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextBroker"
        android:layout_marginTop="20dp"
        android:hint="Port"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/editTextTopic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextPort"
        android:layout_marginTop="20dp"
        android:hint="Topic"
         android:padding="10dp"/>

    <EditText
        android:id="@+id/editTextSeuil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTopic"
        android:layout_marginTop="20dp"
        android:hint="Seuil"
         android:padding="10dp"/>

    <Button
        android:id="@+id/btnSaveConfig"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/editTextSeuil"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginStart="107dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="124dp"
        android:layout_marginBottom="20dp"
        android:text="Save Config" />

</RelativeLayout>